<div id="education" class="table">
  <% data.forEach(function(university) { %>
    <div class="table-row">
      <!-- Date -->
      <div class="table-cell">
        <%= formatDate(university.start_date) %> -
        <%= formatDate(university.end_date) %>
      </div>

      <!-- Name -->
      <div class="table-cell">
        <span class="name"><%= university.name %></span>
        <% if (university.degree) { %>
          <ul>
            <li>
              <%= university.degree %>
            </li>
          </ul>
        <% } %>
      </div>
    </div>
  <% }) %>
</div>
